{
  "manifest_version": 3,
  "name": "Local Annotator",
  "version": "1.0",
  "description": "A Chrome extension to highlight and annotate text on webpages and save them.",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon.png",
      "48": "assets/icons/icon.png",
      "128": "assets/icons/icon.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon.png",
    "48": "assets/icons/icon.png",
    "128": "assets/icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/content/contentScript.js",
        "src/content/sidebar/js/sidebar.js",
        "src/content/sidebar/js/annotationSidebar.js",
        "src/content/sidebar/js/annotationSidebar.js",
        "src/content/sidebar/js/toggleSidebar.js",
        "src/content/sidebar/js/toolbar.js",
        "src/content/sidebar/js/annotations.js",
        "src/content/sidebar/js/tags.js",
        "src/content/sidebar/js/notes.js",
        "src/content/sidebar/js/highlighting.js",
        "src/content/sidebar/js/utils.js"
      ],
      "css": [
        "src/content/sidebar/css/sidebar.css",
        "src/content/sidebar/css/general.css",
        "src/content/sidebar/css/container.css",
        "src/content/sidebar/css/topbar.css",
        "src/content/sidebar/css/buttons.css",
        "src/content/sidebar/css/annotations.css",
        "src/content/sidebar/css/navigation.css",
        "src/content/sidebar/css/tags.css",
        "src/content/sidebar/css/notes.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/icon.png",  
        "src/content/sidebar/sidebar.html",
        "src/content/sidebar/js/sidebar.js",
        "src/content/sidebar/js/annotations.js",
        "src/content/sidebar/js/tags.js",
        "src/content/sidebar/js/notes.js",
        "src/content/sidebar/js/highlighting.js",
        "src/content/sidebar/js/utils.js",
        "src/content/sidebar/css/sidebar.css",
        "src/content/sidebar/css/general.css",
        "src/content/sidebar/css/container.css",
        "src/content/sidebar/css/topbar.css",
        "src/content/sidebar/css/buttons.css",
        "src/content/sidebar/css/annotations.css",
        "src/content/sidebar/css/tags.css",
        "src/content/sidebar/css/notes.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
